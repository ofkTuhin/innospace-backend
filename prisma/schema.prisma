generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(uuid()) @db.Uuid
  email             String             @unique
  firstName         String?            @map("first_name")
  lastName          String?            @map("last_name")
  password          String?
  phoneNumber       String?            @unique @map("phone_number")
  company           String?            @map("company")
  avatar            String?
  role              UserRole           @default(HQ) @map("user_role")
  country           String?
  status            Boolean            @default(true)
  isVerified        Boolean            @default(false) @map("is_verified")
  isDeleted         Boolean            @default(false) @map("is_deleted")
  createdBy         String?            @map("created_by")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime?          @updatedAt @map("updated_at")
  deletedAt         DateTime?          @map("deleted_at")
  createdSurveys    Survey[]           @relation("SurveyCreator")
  surveySubmissions SurveySubmission[]

  @@map("users")
}

model OTP {
  id          String    @id @default(uuid()) @db.Uuid
  otp         String
  expiresAt   DateTime  @map("expires_at")
  email       String?
  phoneNumber String?   @map("phone_number")
  status      Boolean   @default(true)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
}

enum UserRole {
  HQ
  ARCHROMA
  MILL
  ADMIN
  OFFICER
}

// Survey Management Models
model Survey {
  id          String             @id @default(uuid()) @db.Uuid
  title       String
  description String?
  isActive    Boolean            @default(true) @map("is_active")
  createdById String             @map("created_by_id") @db.Uuid
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")
  createdBy   User               @relation("SurveyCreator", fields: [createdById], references: [id])
  fields      SurveyField[]
  submissions SurveySubmission[]

  @@index([createdById])
  @@map("surveys")
}

model SurveyField {
  id                String             @id @default(uuid()) @db.Uuid
  surveyId          String             @map("survey_id") @db.Uuid
  label             String
  fieldType         SurveyFieldType    @map("field_type")
  isRequired        Boolean            @default(false) @map("is_required")
  options           String[]           @default([])
  orderIndex        Int                @default(0) @map("order_index")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  survey            Survey             @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  submissionAnswers SubmissionAnswer[]

  @@index([surveyId])
  @@map("survey_fields")
}

model SurveySubmission {
  id            String             @id @default(uuid()) @db.Uuid
  surveyId      String             @map("survey_id") @db.Uuid
  submittedById String             @map("submitted_by_id") @db.Uuid
  submittedAt   DateTime           @default(now()) @map("submitted_at")
  survey        Survey             @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  submittedBy   User               @relation(fields: [submittedById], references: [id])
  answers       SubmissionAnswer[]

  @@index([surveyId])
  @@index([submittedById])
  @@map("survey_submissions")
}

model SubmissionAnswer {
  id           String           @id @default(uuid()) @db.Uuid
  submissionId String           @map("submission_id") @db.Uuid
  fieldId      String           @map("field_id") @db.Uuid
  answer       String[]         @default([])
  createdAt    DateTime         @default(now()) @map("created_at")
  submission   SurveySubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  field        SurveyField      @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([fieldId])
  @@map("submission_answers")
}

enum SurveyFieldType {
  TEXT
  CHECKBOX
  RADIO
  SELECT
}
